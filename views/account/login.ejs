<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<div class="login-form">
  <form id="loginForm" action="/account/login" method="post">
    <label for="email" >Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address"  required>

    <label for="password">Password:</label>
    <div class="password-input">
      <input type="password" id="password" name="account_password" required 
        pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?=.*[a-z]).{12,}$"
        autocomplete="current-password">
      <span id="showPassword" class="password-toggle">Show</span>
    </div>

    <button type="submit">Login</button>
  </form>

  <p>No account? <a href="/account/register">Sign-up</a></p>
</div>

<script src="../js/script.js"></script>




